<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>Ajax</servlet-name>
        <servlet-class>com.corp.globant.VIEW.AjaxResponse</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>com.corp.globant.MODEL.logic.Login</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/Login</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>Home</servlet-name>
        <jsp-file>/home.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>Home</servlet-name>
        <url-pattern>/Home</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>AddNewHire</servlet-name>
        <jsp-file>/hires-add.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddNewHire</servlet-name>
        <url-pattern>/AddNH</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>UpdateHire</servlet-name>
        <jsp-file>/hires-update.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>UpdateHire</servlet-name>
        <url-pattern>/UpdateNH</url-pattern>
    </servlet-mapping>
    <filter>
    <filter-name>SessionCheckFilter</filter-name>
    <filter-class>com.corp.globant.MODEL.logic.SessionCheckFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>SessionCheckFilter</filter-name>
        <url-pattern>/abm-sites</url-pattern> <!-- url from where you implement the filtering -->
        <url-pattern>/abm-users.jsp</url-pattern>
        <url-pattern>/import-nh.jsp</url-pattern>
        <url-pattern>/internos.jsp</url-pattern>
        <url-pattern>/positions.jsp</url-pattern>
        <url-pattern>/search-users.jsp</url-pattern>
        <url-pattern>/hire-add.jsp</url-pattern>
        <url-pattern>/home.jsp</url-pattern>
    </filter-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
